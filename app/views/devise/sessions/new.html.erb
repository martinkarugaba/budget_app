
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col justify-start items-center" }) do |f| %>

  <%= render "shared/header", heading: 'Login', back: true, login: true, f: f %>

  <div class="field mt-8 border-b">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class:'border-none py-4' %>
  </div>

  <div class="field border-b">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class:'border-none py-4' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
