<div class="mx-auto md:w-2/3 w-full">
  <%= render partial: 'shared/header', locals: { heading: 'Create new group', back: true } %>

  <div class='flex flex-col mb-8 justify-start items-center border-2 pt-8 px-8'>
    <%= form_with(model: @category, local: true) do |form| %>
      <%= render "form", form: form, category: @category %>
    <% end %>
  </div>
  <%= link_to "Back to groups", categories_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>