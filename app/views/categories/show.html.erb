<%= render partial: 'shared/header', locals: { heading: 'Transactions', back: true } %>

<div class="w-full px-4 py-8">
  <div class="">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <div class=''>
      <%= render @category %>
    </div>
    <% @category.financial_transactions.each do |transaction| %>
      <%= render partial: 'transactions/transaction', locals: { transaction: transaction } %>
    <% end %>
  </div>
</div>

<%= render partial: 'shared/button', locals: { button_text: 'Back to categoreis', button_path: categories_path } %>



