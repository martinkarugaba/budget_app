<%= render partial: 'shared/header', locals: { heading: 'Category Details', back: true } %>

<div class="w-full px-4">
  <div class="">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @category %>

    <%= link_to "Edit", edit_category_path(@category), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Delete", category_path(@category), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-500 text-white font-medium" %>
    </div>

    <h3 class="text-xl font-medium mt-5 mb-2">Transactions</h3>
    <% @category.financial_transactions.each do |transaction| %>
      <%= render partial: 'transactions/transaction', locals: { transaction: transaction } %>
    <% end %>

    <%= link_to "Back", categories_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
