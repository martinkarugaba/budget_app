<div id="<%= dom_id category %>" class='border-b pb-4 mb-8 border-orange-500 w-full'>
  <div class='flex justify-between items-center'>
    <div class='flex justify-start items-center w-full gap-4 mb-4'>
      <div class="h-[60px] w-[60px] border rounded">
        <%= image_tag(category.icon.variant(resize: "100x100", quality: 80), alt: "Category Icon") if category.icon.attached? %>
      </div>

      <p class="">
        <%= category.name %>
      </p>
    </div>
    <p><%= number_to_currency(category.financial_transactions.sum(:amount)) %></p>
  </div>

  <% if action_name != "show" %>
    <div class=''>
      <%= link_to "Details", category, class: "rounded-lg py-2 px-4 bg-green-600 text-white inline-block font-medium" %>
      <%= link_to "Edit", edit_category_path(category), class: "rounded-lg py-2 ml-2 px-4 bg-gray-100 inline-block font-medium" %>
    </div>
  <% end %>
</div>