<div id="<%= dom_id category %>" class=' border-orange-500 w-full'>
  <div class='flex justify-start items-center border-b w-auto gap-4 p-4'>
    <div class="my-4 h-[100px] w-[100px] border rounded">
      <%= image_tag(category.icon.variant(resize: "100x100", quality: 80), alt: "Category Icon") if category.icon.attached? %>
    </div>

    <p class="my-4">
      <%= category.name %>
    </p>
  </div>

  <% if action_name != "show" %>
    <div class='p-4 border'>
    <%= link_to "Details", category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit", edit_category_path(category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  <% end %>
</div>