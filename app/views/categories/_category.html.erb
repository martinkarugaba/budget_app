<div id="<%= dom_id category %>" class='border-b pb-4 mb-8 border-orange-500 w-full'>
  <div class='flex justify-between items-center'>
    <div class='flex justify-start items-center w-full gap-4 mb-4'>
      <div class="h-[60px] w-[60px] border rounded flex justify-center items-center">
        <% if category.icon.attached? %>
          <%= image_tag(url_for(category.icon), alt: "Category Icon", class: "fas fa-user fa-2x") %>
        <% else %>
          <i class="fas fa-user fa-2x"></i>
        <% end %>
      </div>

      <p class="">
        <%= category.name %>
      </p>
    </div>
    <p><%= number_to_currency(category.financial_transactions.sum(:amount)) %></p>
  </div>

  <% if action_name != "show" %>
    <div class='flex justify-end items-center gap-4'>
      <%= link_to "Details", category, class: "rounded py-2 px-4 bg-green-600 text-white inline-block font-medium" %>
      <%= link_to "Edit", edit_category_path(category), class: "rounded py-2 px-4 bg-gray-100 bg-amber-400 text-secondary inline-block font-medium" %>
      <%= button_to "Delete", category, method: :delete, data: { confirm: "Are you sure you want to delete this category?" }, class: "rounded py-2 px-4 bg-red-600 text-white inline-block font-medium" %>
    </div>
  <% end %>
</div>