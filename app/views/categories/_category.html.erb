<section class='border-2 rounded p-2'>  
  <div class='border-amber-500'>
    <%= link_to category, class: "block mb-2 cursor-pointer border-orange-500 w-[350px]" do %>
      <div id="<%= dom_id category %>" class='flex justify-between items-center w-full'>
        <div class='flex justify-start items-center w-full gap-4'>
          <div class="h-[70px] w-[70px] border rounded flex justify-center items-center">
            <% if category.icon.attached? %>
              <%= image_tag(url_for(category.icon), alt: "Category Icon", class: "fas fa-user fa-2x h-full w-full object-cover") %>
            <% else %>
              <i class="fas fa-user fa-2x"></i>
            <% end %>
          </div>

          <p class="">
            <%= category.name %>
          </p>
        </div>
        <p><strong>$</strong><%= category.financial_transactions.sum(:amount) %></p>
      </div>
    <% end %>
  </div>

  <% if action_name != "show" %>
    <div class='flex justify-end w-full items-center gap-4'>
      <%= link_to edit_category_path(category), class: "rounded py-2 px-4 text-white bg-amber-500 bg-amber-400 text-secondary inline-block font-medium" do %>
        <i class="fas fa-edit"></i> Edit
      <% end %>
      <%= button_to category, method: :delete, data: { confirm: "Are you sure you want to delete this category?" }, class: "rounded py-2 cursor-pointer px-4 bg-red-600 text-white inline-block font-medium" do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  <% end %>
</section>