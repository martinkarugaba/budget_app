<%= render partial: 'shared/header', locals: { heading: 'Transactions', back: true } %>

<div class="w-full px-4">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-end items-center mt-4 ">
    <%= link_to "New transaction", new_transaction_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="entities" class="min-w-full">
    <%= render @transactions %>
  </div>
</div>
