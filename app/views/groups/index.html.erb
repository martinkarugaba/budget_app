<div class="w-full h-full">

  <%= render partial: 'shared/header', locals: { heading: 'group list', back: true } %>

  <div class='flex flex-col justify-start items-center border-2 pt-8 px-8'>
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div id="groups" class="min-w-full">
      <%= render @groups %>
    </div>

    <div class="flex justify-between items-center mt-8">
      <%= link_to "New group", new_group_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>
  </div>
</div>
